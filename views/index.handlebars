<div class="container">
    <h1 class="text-center">Eat Da Burger</h1>

    <div class="row">
        <div class="col-md-6">
            {{#each burgers}}
            {{#unless devoured}}

            <p><span class="label">Freshly made: </span>{{this.id}}</p>
            <p><span class="label">Burger: </span>{{this.burger_name}}</p>

            <button data-id="{{this.id}}" class="devourburger">Devour it!</button>

            {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}

                <p><span class="label">Yummy yum: </span>{{this.id}}</p>
                <p><span class="label">Burger: </span>{{this.burger_name}}</p>

                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <input type="text" id="brgr" name="name">
            <br>
            <button type="submit" id="submit">Order</button>

        </div>
    </div>
</div>