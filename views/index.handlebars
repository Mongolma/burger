<ul>
    {{#each burgers}}
    <li>
        <p><span class="label">ID:</span>{{this.id}}</p>
        <p><span class="label">Burger:</span>{{this.burger_name}}</p>

        <button data-id="{{this.id}}" class="devourburger">Devour it!</button>
    </li>
    {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="brgr">Burger:</label>
        <input type="text" id="brgr" name="name">
    </div>
</form>
<button type="submit">Order</button>